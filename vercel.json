{
  "version": 2,
  "builds": [
    {
      "src": "vercel-adapter.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/**",
          "dist/**",
          "shared/**",
          "server/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/server-build/vercel-adapter.mjs"
    },
    {
      "src": "/(assets/.*)",
      "dest": "dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "dist/public/index.html"
    }
  ],
  "outputDirectory": "dist/public"
}
