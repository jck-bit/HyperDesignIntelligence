{
  "version": 2,
  "builds": [
    {
      "src": "vercel-adapter.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "client/**",
          "dist/**",
          "shared/**",
          "server/**"
        ]
      }
    }
  ],
  "routes": [
  {
    "src": "/api/(.*)",
    "dest": "dist/server-build/vercel-adapter.js"
  },
  {
    "src": "/(.*)",
    "dest": "dist/public/index.html"
  }
]
}