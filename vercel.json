{
  "version": 2,
  "builds": [
    {
      "src": "dist/vercel-adapter.mjs",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/server/**",
          "client/dist/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/vercel-adapter.mjs"
    },
    {
      "src": "/(.*)", 
      "dest": "dist/vercel-adapter.mjs"
    }
  ]
}